{{setTitle 'Search Page - Gaming Team'}}
<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" method="GET">
            <input type="text" class="search-game" name="name" placeholder="Search here..." value="{{name}}">
            <select id="platform" name="platformType">
                <option value="">-------</option>
                {{#each platformTypes}}
                <option value="{{value}}" {{selected}}>{{label}}</option>
                {{/each}}
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        {{#if games}}
        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                {{>game}}
                {{/each}}
            </div>
        </div>
        {{else}}
        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>